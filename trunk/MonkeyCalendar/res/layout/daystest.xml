<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/linearLayoutDaysTest1">
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Make DB from CSV" android:id="@+id/buttonDaysTestMakeDB" android:onClick="onClick"></Button>
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Bring Holidays" android:id="@+id/buttonDaysTestBringHolidays" android:onClick="onClick"></Button>
        <Button android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Solar to Lunar" android:id="@+id/buttonDaysTestStoL" android:onClick="onClick"></Button>
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Start: yyyymmdd     End: yyyymmdd" android:id="@+id/textViewDaysTest1"></TextView>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/linearLayoutDaysTest2">
        <EditText android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number" android:id="@+id/editTextDaysTestStartDate"></EditText>
        <EditText android:layout_weight="1" android:layout_width="wrap_content" android:layout_height="wrap_content" android:inputType="number" android:id="@+id/editTextDaysTestEndDate">
            <requestFocus></requestFocus>
        </EditText>
    </LinearLayout>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content" android:orientation="vertical" android:id="@+id/linearLayoutDaysTest3">
        <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Solar date: yyyymmdd" android:id="@+id/textViewDaysTest2"></TextView>
        <EditText android:inputType="number" android:layout_width="fill_parent" android:layout_height="wrap_content" android:id="@+id/editTextDaysTestStoL"></EditText>
    </LinearLayout>
    <EditText android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/editTextDaysTestResult"></EditText>
    
</LinearLayout>
